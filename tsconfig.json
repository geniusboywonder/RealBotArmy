{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["backend/*"],
      "@/agents/*": ["backend/agents/*"],
      "@/core/*": ["backend/core/*"],
      "@/utils/*": ["backend/utils/*"],
      "@/types/*": ["backend/types/*"],
      "@/config/*": ["backend/config/*"]
    }
  },
  "include": ["backend/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "frontend",
    "scratch",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.py"
  ]
}
